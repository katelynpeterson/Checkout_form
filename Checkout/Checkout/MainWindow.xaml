<Window x:Class="Checkout.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Checkout"
        xmlns:sharedvm="clr-namespace:Checkout.VMs;assembly=Checkout"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Window.DataContext>
        <sharedvm:CheckoutVM/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Grid Background="PaleTurquoise" Grid.ColumnSpan="2" Grid.RowSpan="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="6*" />
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
            </Grid.RowDefinitions>
            <TextBlock Grid.ColumnSpan="3" FontSize="20" HorizontalAlignment="Center">OUR STORE</TextBlock>
            <TextBlock Grid.Row="1" HorizontalAlignment="Center" FontWeight="Bold">Product</TextBlock>
            <TextBlock Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" FontWeight="Bold">Price</TextBlock>
            <TextBlock Grid.Row="1" Grid.Column="2"  HorizontalAlignment="Center" FontWeight="Bold">Quantity</TextBlock>
            <TextBlock Grid.Row="2" Text="{Binding Product1Name}"/>
            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Product1Price}"/>
            <TextBox Grid.Row="2" Grid.Column="2" Text="{Binding Product1Quantity}"/>
            <TextBlock Grid.Row="3" Text="{Binding Product2Name}"/>
            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Product2Price}"/>
            <TextBox Grid.Row="3" Grid.Column="2" Text="{Binding Product2Quantity}"/>
            <TextBlock Grid.Row="4" Text="{Binding Product3Name}"/>
            <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding Product3Price}"/>
            <TextBox Grid.Row="4" Grid.Column="2" Text="{Binding Product3Quantity}"/>
            <TextBlock Grid.Row="5" Text="{Binding Product4Name}"/>
            <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding Product4Price}"/>
            <TextBox Grid.Row="5" Grid.Column="2" Text="{Binding Product4Quantity}"/>
            <TextBlock Grid.Row="6" Grid.Column="1" FontWeight="Bold" Text="TOTAL"/>
            <TextBlock Grid.Row="6" Grid.Column="2" FontWeight="Bold" Text="{Binding Total}"/>
            <Button Width="100" Content="Checkout" Grid.Row="8" Grid.ColumnSpan="3" Command="{Binding Purchase}"/>
        </Grid>
        <Grid Grid.Column="3" Grid.ColumnSpan="3" Grid.RowSpan="10" Background="PaleTurquoise" Visibility="{Binding customerBool}"> 
            
            
        </Grid>
    </Grid>
</Window>
